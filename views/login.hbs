<section class="showcase">
    <div class="container">
        <div class="pb-2 mt-4 mb-2 border-bottom text-center">
            <h2>Account Login</h2>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-md-1">
                <form action="/login" method="POST" autocomplete="off">

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Email Address</label>
                            <input type="email" class="form-control"
                                   name="email" placeholder="Enter email"
                                   value="{{user.email}}">
                            <div class="text-danger">
                                {{user.emailError}}</div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Password</label>
                            <input type="password" class="form-control"
                                   name="password" placeholder="Enter password"
                                   value="{{user.password}}">
                            <div class="text-danger">
                                {{user.passwordError}}</div>
                        </div>
                    </div>
                    <div class="form-group float-right">
                        <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-sign-in"></i> Sign In</button>
                        <a class="btn btn-info btn-sm" href="/register"><i class="fa fa-user-plus"></i> Register</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
