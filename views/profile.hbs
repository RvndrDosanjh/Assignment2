<section class="showcase">
    <div class="container">
        <div class="pb-2 mt-4 mb-2 border-bottom">
            <h2>Register for Competition</h2>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-md-1">
                <form action="/register" method="POST" autocomplete="off">
                    <!--                    <input type="hidden" name="_id" value="{{user._id}}">-->
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Full Name</label>
                            <input type="text" class="form-control" name="name" placeholder="Full Name"
                                   value="{{user.name}}">
                            <div class="text-danger">
                                {{user.nameError}}</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Email</label>
                            <input type="text" class="form-control" name="email" placeholder="Email"
                                   value="{{user.email}}">
                            <div class="text-danger">
                                {{user.emailError}}</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        <input type="text" class="form-control" name="country" placeholder="Enter country"
                               value="{{user.country}}">
                        <div class="text-danger">
                            {{user.countryError}}</div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Age</label>
                            <input type="number" class="form-control" name="age" placeholder="Enter age"
                                   value="{{user.age}}">
                            <div class="text-danger">
                                {{user.ageError}}</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Enter gender</label>
                            <select class="form-control" name="gender">
                                <option disabled>-- Select gender --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <div class="text-danger">
                                {{user.genderError}}</div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Update Password</label>
                            <input type="password" class="form-control" name="password" placeholder="Enter password"
                                   value="{{user.password}}">
                            <div class="text-danger">
                                {{user.passwordError}}</div>
                        </div>
                    </div>
                    <div class="form-group float-right">
                        <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-database"></i> Register</button>
                        <a class="btn btn-info btn-sm" href="/"><i class="fa fa-list-alt"></i> View All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
